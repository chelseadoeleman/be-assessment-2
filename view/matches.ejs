<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="utf-8">
    <title>Registreren</title>
    <link rel="stylesheet" href="/stylesheet/style2.css">
    <meta name=viewport content=width=device-width,initial-scale=1>
  </head>
  <body>
    <header>
      <nav>
          <label for="toggle">&#9776;</label>
          <input type="checkbox" id="toggle">
          <ul>
            <li>
              <a href="/matches">Matches</a>
            </li>
            <li>
              <a href="/profile">Profiel</a>
            </li>
            <li>
              <a href="/results">Test resultaten</a>
            </li>
            <li>
              <a href="/settings">Instellingen</a>
            </li>
            <li>
              <a href="/logOut">Uitloggen</a>
            </li>
          </ul>
      </nav>
      <img class="logo" src="images/logoBucketlove.png" alt="Bucketlove">
      <a href="/messages"><img src="images/text.png" alt="Berichten"></a>
    </header>
    <main>
      <h2>Matches</h2>
      <% if (typeof data !== undefined && data.length !== 0) { %>
      <section>
        <% data && data.forEach (function (match,index) { %>
          <article>
            <img src="images/nr1.png" alt="nr1">
            <h4><%= match.name %></h4>
            <h5><%= match.age %>, <%= match.location %></h5>
            <p>3 overeenkomsten</p>
            <ul>
              <li>Skydiven, <i>Sport</i></li>
              <li>Bali, <i>Reizen</i></li>
              <li>Eten in een sterrenrestaurant, <i>Eten & drinken</i></li>
            </ul>
            <a href="/<%= match._id %>" ><button type="button" name="button">Bekijk meer info</button></a>
            <button type="button" name="button"><img src="images/dislike.png" alt="Dislike"></button>
            <button type="button" name="button"><img src="images/hart.png" alt="Like"></button>
          </article>
          <% }) %>
        <% } %>
      </section>
    </main>
  </body>
</html>
